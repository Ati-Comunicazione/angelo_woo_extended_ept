<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_angelo_woo_settings_inherit" model="ir.ui.view">
        <field name="name">inherit.view.angelo.woo.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="woo_commerce_ept.view_woo_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='woo_commerce_ept']/div[16]" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="woo_update_products_price_last_date"/>
                        <div class="text-muted">
                            Set the last update products price date.
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="woo_update_products_price_last_date" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>